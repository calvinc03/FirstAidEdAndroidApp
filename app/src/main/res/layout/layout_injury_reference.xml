<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/injury_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Injury title"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="55"
            android:textStyle="bold"
            android:textColor="#06458a"
            android:textSize="18sp"
            android:paddingEnd="20dp"
            android:text="Signs and Symptoms"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:textColor="#a80a0a"
            android:text="First Aid"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/signs_symptoms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="55"
            android:textSize="16sp"
            android:paddingEnd="15dp"
            android:textColor="@color/colorAccent"
            android:paddingStart="5dp"
            android:text="Signs and Symptoms"/>

        <TextView
            android:id="@+id/first_aid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:paddingStart="5dp"
            android:textColor="@color/colorAccent"
            android:text="First Aid"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>